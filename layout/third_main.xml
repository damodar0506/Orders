        android:id="@+id/tv1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text=" "
        android:padding="5dp"
        android:layout_below="@+id/tvitem"
        android:layout_alignLeft="@+id/tvitem"
        android:layout_alignStart="@+id/tvitem" />

